<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    @import url('https://fonts.googleapis.com/css2?family=Catamaran:wght@600&display=swap');
</style>
<style>
    * {
        margin: 0;
        padding: 0;
        font-family: "Catamaran", sans-serif;
    }

    .b {
        background-color: #fa4251;
        height: 100%;
        width: 100%;
    }

    form {
        background-color: white;
        border-radius: 10px;
    }

    .form-group {
        margin-top: 1.5vw;
    }

    .mg {
        margin-top: 5vw;
    }
</style>
<div class="b">
    <div class="card-body ">
        <div class="mg"></div>
        <form action="/pass" class="col-8 border  p-5 m-auto" method="post" enctype="multipart/form-data"
            onsubmit="return validateform()" name="myform">
            <h1 align=center>Đổi mật khẩu</h1>
            <div class="form-group">
                <input type="email" name="email" class="form-control " placeholder="Nhập email để đổi mật khẩu">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control " placeholder="Mật khẩu mới">
            </div>
          
            <div class="form-group text-center">
                <button type="submit" class="btn btn-dark w-25 p-2 ">Lưu</button>

            </div>

        </form>
    </div>

</div>
</div>